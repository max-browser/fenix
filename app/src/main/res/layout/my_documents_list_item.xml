<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pdf"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="22dp"
        android:scaleType="fitCenter"
        android:src="@drawable/max_ic_pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_file_name"
        style="@style/Header14TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/gl_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pdf"
        tools:text="file name" />

    <TextView
        android:id="@+id/tv_last_modified"
        style="@style/Subtitle12TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/iv_pdf"
        app:layout_constraintTop_toTopOf="@+id/gl_center"
        app:layout_constraintWidth_percent="0.2"
        tools:text="file size" />

    <TextView
        android:id="@+id/tv_divider"
        style="@style/Subtitle12TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_last_modified"
        app:layout_constraintStart_toEndOf="@+id/tv_last_modified"
        app:layout_constraintTop_toTopOf="@+id/tv_last_modified"
        app:layout_constraintWidth_percent="0.05"
        android:text="|" />

    <TextView
        android:id="@+id/tv_file_size"
        style="@style/Subtitle12TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_divider"
        app:layout_constraintStart_toEndOf="@+id/tv_divider"
        app:layout_constraintTop_toTopOf="@+id/tv_divider"
        app:layout_constraintWidth_percent="0.3"
        tools:text="file size" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="22dp"
        android:background="?attr/borderPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
